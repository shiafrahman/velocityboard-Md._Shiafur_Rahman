@page
@model VelocityBoard.Web.Pages.Projects.IndexModel
@{
    ViewData["Title"] = "Projects";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Projects</h1>
    <a asp-page="/Projects/Edit" class="btn btn-primary">Create New Project</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Created By</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Projects.Any())
        {
            @foreach (var project in Model.Projects)
            {
                <tr>
                    <td>@project.Name</td>
                    <td>@project.Description</td>
                    <td>@project.CreatedByUserName</td>
                    <td>
                        <a asp-page="/Projects/Edit" asp-route-id="@project.Id" class="btn btn-sm btn-secondary">Edit</a>

                        <form method="post" asp-page-handler="Delete" asp-route-id="@project.Id" onsubmit="return confirm('Are you sure you want to delete this project?');">
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">No projects found.</td>
            </tr>
        }
    </tbody>
</table>